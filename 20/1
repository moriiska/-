#include <iostream>
#include <windows.h>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	char C;
	cout << "Введите символ:\n";
	cin >> C;
	cout << "Предыдущий символ: " << char(C - 1) << endl;
	cout << "Следующий символ: " << char(C + 1) << endl;
	return 0;
}
